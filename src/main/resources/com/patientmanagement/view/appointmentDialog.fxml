<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.patientmanagement.controller.AppointmentDialogController"
      spacing="15.0">
    
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <Label fx:id="titleLabel" text="New Appointment" style="-fx-font-weight: bold;">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
        </padding>
        
        <Label text="Patient:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <ComboBox fx:id="patientComboBox" prefWidth="200.0" />
            <Button fx:id="selectPatientButton" text="Select" onAction="#handleSelectPatient" />
        </HBox>
        
        <Label text="Doctor:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="doctorComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200.0" />
        
        <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200.0" />
        
        <Label text="Start Time:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="startTimeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="200.0" />
        
        <Label text="End Time:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <ComboBox fx:id="endTimeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="200.0" />
        
        <Label text="Reason:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="reasonField" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="200.0" />
        
        <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextArea fx:id="notesArea" GridPane.columnIndex="1" GridPane.rowIndex="6" prefWidth="200.0" prefHeight="80.0" wrapText="true" />
        
        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="7" prefWidth="200.0" />
    </GridPane>
    
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" />
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" defaultButton="true" />
    </HBox>
</VBox>
