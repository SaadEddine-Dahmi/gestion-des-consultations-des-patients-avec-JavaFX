<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.patientmanagement.controller.PatientsController"
      spacing="15.0">
    
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label text="Patient Management" style="-fx-font-weight: bold;">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" promptText="Search patients..." prefWidth="250.0" />
        <Button fx:id="searchButton" text="Search" onAction="#handleSearch" />
        <Button fx:id="addPatientButton" text="Add New Patient" onAction="#handleAddPatient" />
    </HBox>
    
    <TableView fx:id="patientsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0" />
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150.0" />
            <TableColumn fx:id="dobColumn" text="Date of Birth" prefWidth="100.0" />
            <TableColumn fx:id="genderColumn" text="Gender" prefWidth="80.0" />
            <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="120.0" />
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="150.0" />
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150.0" />
        </columns>
    </TableView>
    
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Label fx:id="totalPatientsLabel" text="Total Patients: 0" />
    </HBox>
</VBox>
