<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.patientmanagement.controller.DashboardController"
            prefHeight="768.0" prefWidth="1024.0">
    
    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #3498db;">
            <padding>
                <Insets top="10.0" right="15.0" bottom="10.0" left="15.0"/>
            </padding>
            <Label text="Patient Consultation Management System" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="userLabel" textFill="WHITE">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" />
        </HBox>
    </top>
    
    <left>
        <VBox spacing="10.0" style="-fx-background-color: #f4f4f4;" prefWidth="200.0">
            <padding>
                <Insets top="15.0" right="10.0" bottom="15.0" left="10.0"/>
            </padding>
            
            <Label text="Navigation" style="-fx-font-weight: bold;">
                <font>
                    <Font size="16.0"/>
                </font>
            </Label>
            
            <Button fx:id="dashboardButton" text="Dashboard" maxWidth="Infinity" 
                    onAction="#handleDashboardButton" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
            
            <Button fx:id="patientsButton" text="Patients" maxWidth="Infinity" 
                    onAction="#handlePatientsButton" />
            
            <Button fx:id="appointmentsButton" text="Appointments" maxWidth="Infinity" 
                    onAction="#handleAppointmentsButton" />
            
            <Button fx:id="medicalRecordsButton" text="Medical Records" maxWidth="Infinity" 
                    onAction="#handleMedicalRecordsButton" />
            
            <Button fx:id="doctorsButton" text="Doctors" maxWidth="Infinity" 
                    onAction="#handleDoctorsButton" />
            
            <Region VBox.vgrow="ALWAYS" />
            
            <Separator />
            
            <Button fx:id="settingsButton" text="Settings" maxWidth="Infinity" 
                    onAction="#handleSettingsButton" />
        </VBox>
    </left>
    
    <center>
        <StackPane fx:id="contentArea">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            
            <!-- Dashboard content -->
            <VBox fx:id="dashboardContent" spacing="20.0">
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <Label text="Dashboard" style="-fx-font-weight: bold;">
                        <font>
                            <Font size="24.0"/>
                        </font>
                    </Label>
                    <Label fx:id="dateLabel" />
                </HBox>
                
                <HBox spacing="20.0">
                    <!-- Today's appointments card -->
                    <VBox styleClass="dashboard-card" style="-fx-background-color: #e8f4f8; -fx-background-radius: 5;" 
                          prefWidth="300.0" prefHeight="150.0">
                        <padding>
                            <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                        </padding>
                        <Label text="Today's Appointments" style="-fx-font-weight: bold;">
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </Label>
                        <Label fx:id="todayAppointmentsCount" text="0" style="-fx-font-weight: bold;">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </Label>
                        <Region VBox.vgrow="ALWAYS" />
                        <Button text="View All" onAction="#handleViewTodayAppointments" />
                    </VBox>
                    
                    <!-- Total patients card -->
                    <VBox styleClass="dashboard-card" style="-fx-background-color: #e8f8e8; -fx-background-radius: 5;" 
                          prefWidth="300.0" prefHeight="150.0">
                        <padding>
                            <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                        </padding>
                        <Label text="Total Patients" style="-fx-font-weight: bold;">
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </Label>
                        <Label fx:id="totalPatientsCount" text="0" style="-fx-font-weight: bold;">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </Label>
                        <Region VBox.vgrow="ALWAYS" />
                        <Button text="View All" onAction="#handleViewAllPatients" />
                    </VBox>
                    
                    <!-- Total doctors card -->
                    <VBox styleClass="dashboard-card" style="-fx-background-color: #f8e8e8; -fx-background-radius: 5;" 
                          prefWidth="300.0" prefHeight="150.0">
                        <padding>
                            <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
                        </padding>
                        <Label text="Total Doctors" style="-fx-font-weight: bold;">
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </Label>
                        <Label fx:id="totalDoctorsCount" text="0" style="-fx-font-weight: bold;">
                            <font>
                                <Font size="36.0"/>
                            </font>
                        </Label>
                        <Region VBox.vgrow="ALWAYS" />
                        <Button text="View All" onAction="#handleViewAllDoctors" />
                    </VBox>
                </HBox>
                
                <Label text="Upcoming Appointments" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                
                <TableView fx:id="upcomingAppointmentsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="dateColumn" text="Date" prefWidth="100.0" />
                        <TableColumn fx:id="timeColumn" text="Time" prefWidth="100.0" />
                        <TableColumn fx:id="patientColumn" text="Patient" prefWidth="150.0" />
                        <TableColumn fx:id="doctorColumn" text="Doctor" prefWidth="150.0" />
                        <TableColumn fx:id="reasonColumn" text="Reason" prefWidth="200.0" />
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100.0" />
                    </columns>
                </TableView>
                
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button text="New Appointment" onAction="#handleNewAppointment" />
                </HBox>
            </VBox>
        </StackPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="5.0" right="10.0" bottom="5.0" left="10.0"/>
            </padding>
            <Label text="Â© 2025 Patient Management System" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="statusLabel" />
        </HBox>
    </bottom>
    
</BorderPane>
