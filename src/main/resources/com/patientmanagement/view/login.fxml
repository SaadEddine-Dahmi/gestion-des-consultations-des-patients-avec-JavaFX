<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.patientmanagement.controller.LoginController"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            
            <Label text="Patient Consultation Management System" style="-fx-font-weight: bold;">
                <font>
                    <Font size="20.0"/>
                </font>
            </Label>
            
            <Label text="Login to your account" />
            
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>
                
                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200.0" />
                
                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200.0" />
                
                <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" defaultButton="true" />
                </HBox>
                
                <Label fx:id="errorLabel" textFill="RED" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2" />
            </GridPane>
            
            <HBox alignment="CENTER">
                <Label text="Default admin credentials: username: admin, password: admin123" textFill="GRAY" />
            </HBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <Label text="Â© 2025 Patient Management System" />
        </HBox>
    </bottom>
</BorderPane>
