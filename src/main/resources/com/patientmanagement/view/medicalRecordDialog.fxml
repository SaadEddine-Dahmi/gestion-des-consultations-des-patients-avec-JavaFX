<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.patientmanagement.controller.MedicalRecordDialogController"
      spacing="15.0">
    
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <Label text="Add Medical Record" style="-fx-font-weight: bold;">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    
    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
        </padding>
        
        <Label text="Patient:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="patientLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="Doctor:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="doctorLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="Appointment Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="appointmentDateLabel" text="" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="Diagnosis:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextArea fx:id="diagnosisArea" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="300.0" prefHeight="80.0" wrapText="true" />
        
        <Label text="Treatment:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextArea fx:id="treatmentArea" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="300.0" prefHeight="80.0" wrapText="true" />
        
        <Label text="Prescription:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextArea fx:id="prescriptionArea" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="300.0" prefHeight="80.0" wrapText="true" />
        
        <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextArea fx:id="notesArea" GridPane.columnIndex="1" GridPane.rowIndex="6" prefWidth="300.0" prefHeight="80.0" wrapText="true" />
    </GridPane>
    
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" />
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" defaultButton="true" />
    </HBox>
</VBox>
